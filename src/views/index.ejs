<!-- menu reviews -->
	<div class="container">
		<div class="row">
        <div class="col-lg-4 text-center order-2">
			
				<form action="/create" method="POST" class="card card-body mt-5">
					<div class="form-group">
						<select type="text" name="course" placeholder="Insert a Course Name" class="form-control" autofocus>
                    
							<option value="Ballet Dance">Ballet Dance</option>
							<option value="Tap Dance">Tap Dance</option>
							<option value="Jazz Dance">Jazz Dance</option>
							<option value="Morden Dance">Morden Dance</option>
						</select>
                    
                    </div>
                    <div class="form-group">
						<select type="text" name="level" placeholder="Insert course level" class="form-control">
                       
							<option value="Beginner">Beginner</option>
							<option value="Intermadiate">Intermadiate</option>
							<option value="Advanced">Avanced</option>
							
						</select>

                        </div>
                    <div class="form-group">
						<input type="text" name="name" placeholder="Your Name" class="form-control">
                    </div>
                    <div class="form-group">
						<input type="text" name="email" placeholder="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        
						<textarea type="text" name="review" placeholder="Review" class="form-control"></textarea>
                    </div>
                    <button class="btn btn-primary">
                        Save
                       
 



                    </button>
				</form>
               
        </div>
 
 <div class="col-lg-6 text-left order-3">
                <% tasks.forEach(function (task) { %>
                    <div class="card card-body mt-5">
                        <h5><%= task.course %> <%= task.level %></h5>
                        <p><%= task.review %></p>
                        <p><%= task.name %></p>
                        <p><%= task.email %></p>
                        
                    </div>
                <% }) %>
</div>

               
